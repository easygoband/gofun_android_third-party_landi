<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".LandiApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/gofun_landi_service"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gofun_landi_service"
        tools:targetApi="31">
        <activity
            android:name="com.gofun.landi_service.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Gofun_landi_service.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeviceDataActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.gofun.landi_service.GET_DEVICE_TAG" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".PrinterActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="com.gofun.landi_service.TICKET_PRINT" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>